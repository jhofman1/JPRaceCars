using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace TECH497_Final_Group_Project.Database
{
    enum Catagory
    {
        DragRacing,
        RoadRacing,
        StreatRods, 
        Offroad,
        OtherProjects
    }
    class ImageDefinition
    {
        public string AltText { get; set; }
        public string URL { get; set; }
    }
    class Project
    {
        ImageDefinition MainImage { get; set; }
        string Title { get; set; }
        string Description { get;set; }
        IEnumerable<ImageDefinition> images { get; set; }
    }
    public interface IDatabase
    {
        Project GetImagesForProjects(Catagory catagory, int ID);
        IEnumerable<Project> GetProjectsForCatagory(Catagory catagory);
        
    }
}
